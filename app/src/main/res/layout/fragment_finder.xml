<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".finder.FinderFragment">

	<androidx.cardview.widget.CardView
		android:id="@+id/topCard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		app:cardCornerRadius="5dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/txtv_ageLimit"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="Age Limit"
				android:textColor="#233282"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				app:layout_constraintEnd_toStartOf="@+id/txtv_minView"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"/>
			<TextView
				android:id="@+id/txtv_minView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="12"
				android:gravity="end"
				android:layout_marginTop="10dp"
				app:layout_constraintEnd_toStartOf="@+id/txtv_seperator"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toEndOf="@+id/txtv_ageLimit"
				app:layout_constraintTop_toTopOf="parent"/>

			<TextView
				android:id="@+id/txtv_seperator"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="-"
				android:gravity="center"
				android:layout_marginTop="10dp"
				app:layout_constraintEnd_toStartOf="@+id/txtv_maxView"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toEndOf="@+id/txtv_minView"/>

			<TextView
				android:id="@+id/txtv_maxView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:text="35"
				android:layout_marginTop="10dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toEndOf="@+id/txtv_seperator"/>

			<TextView
				android:id="@+id/txtv_Min"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="Min"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginLeft="10dp"
				app:layout_constraintTop_toBottomOf="@+id/txtv_ageLimit"
				app:layout_constraintBottom_toBottomOf="parent"/>

			<TextView
				android:id="@+id/txtv_Max"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="Max"
				android:layout_marginRight="10dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/txtv_ageLimit"/>


			<io.apptik.widget.MultiSlider
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/rangebar"
				android:layout_width="0dp"
				android:layout_height="50dp"
				app:drawThumbsApart="true"
				app:thumbValue1="5"
				app:layout_constraintLeft_toRightOf="@+id/txtv_Min"
				app:layout_constraintRight_toLeftOf="@+id/txtv_Max"
				app:layout_constraintTop_toBottomOf="@+id/txtv_ageLimit"
				app:layout_constraintBottom_toBottomOf="parent"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/txt_ageComment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/finder_info_age"
		android:layout_marginLeft="10dp"
		android:padding="5dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/topCard"/>

	<androidx.cardview.widget.CardView
		android:id="@+id/middleCard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		app:layout_constraintTop_toBottomOf="@+id/txt_ageComment">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp">

			<TextView
				android:id="@+id/txtv_State"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="center|center_horizontal"
				android:text="State"
				android:textColor="#233282"
				app:layout_constraintEnd_toStartOf="@+id/spinner_location"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

			<Spinner android:id="@+id/spinner_location"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="start"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/txtv_State"/>

		</androidx.constraintlayout.widget.ConstraintLayout>


	</androidx.cardview.widget.CardView>
	<TextView
		android:id="@+id/txt_locationComment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/finder_info_location"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginLeft="10dp"
		android:padding="5dp"
		app:layout_constraintTop_toBottomOf="@+id/middleCard"/>

	<androidx.cardview.widget.CardView
		android:id="@+id/bottomCard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:cardCornerRadius="5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		app:layout_constraintTop_toBottomOf="@+id/txt_locationComment">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp">

			<TextView
				android:id="@+id/txtv_showme"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Show me"
				android:textColor="#233282"
				app:layout_constraintEnd_toStartOf="@+id/txtv_Gender"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toStartOf="parent"/>
			<TextView
				android:id="@+id/txtv_Gender"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Both"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toEndOf="@+id/txtv_showme"/>

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/btnMale"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="MALE"
				app:layout_constraintEnd_toStartOf="@+id/btnFemale"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/txtv_showme"/>

			<androidx.appcompat.widget.AppCompatButton
				android:id="@+id/btnFemale"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="FEMALE"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toEndOf="@+id/btnMale"
				app:layout_constraintTop_toBottomOf="@+id/txtv_showme"/>


		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/includeCoachCard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/bottomCard">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp">
			<TextView
				android:id="@+id/txtv_includeCoach"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="Include Coaches"
				android:textColor="#233282"
				app:layout_constraintEnd_toStartOf="@+id/toggle_coach"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>
			<Switch
				android:id="@+id/toggle_coach"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toEndOf="@+id/txtv_includeCoach"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

	<ImageView
		android:id="@+id/btnPlay"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_marginTop="10dp"
		android:src="@drawable/icon_play"
		app:layout_constraintLeft_toRightOf="parent"
		app:layout_constraintRight_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/includeCoachCard"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Play"
		android:textColor="#233282"
		app:layout_constraintLeft_toRightOf="parent"
		app:layout_constraintRight_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btnPlay"/>


</androidx.constraintlayout.widget.ConstraintLayout>