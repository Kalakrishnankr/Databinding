<?xml version="1.0" encoding="utf-8"?>
<layout>
	<data class="AthleteProfileBinding">
		<variable name="adapter" type="com.beachpartnerllc.beachpartner.user.userprofile.SliderAdapter"/>
	</data>

	<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/scrollview_profile"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">


		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<FrameLayout
				android:id="@+id/header_cover_video"
				android:layout_width="match_parent"
				android:layout_height="163dp"
				android:background="#000"
				tools:layout_constraintEnd_toEndOf="parent"
				tools:layout_constraintStart_toStartOf="parent">


				<com.google.android.exoplayer2.ui.PlayerView
					android:id="@+id/exoplayer_profile"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginTop="2dp"
					android:clickable="false"
					android:focusable="true"
					app:resize_mode="fill"
					app:use_controller="false"/>
				<ProgressBar
					android:id="@+id/progressBar"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_gravity="center"
					android:visibility="visible"/>

				<FrameLayout
					android:id="@+id/placeholder"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:foregroundGravity="center"
					android:visibility="gone">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center"
						android:scaleType="fitXY"
						android:text="@string/no_video_available"
						android:textColor="@color/white"/>

				</FrameLayout>

				<ImageView
					android:id="@+id/imgVideo"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_gravity="bottom|end"
					android:layout_margin="10dp"
					android:background="@drawable/ic_edit_profile"
					android:scaleType="centerCrop"
					android:visibility="gone"/>
			</FrameLayout>

			<ImageView
				android:id="@+id/row_icon"
				android:layout_width="@dimen/circular_img_width"
				android:layout_height="@dimen/circular_img_height"
				android:layout_marginTop="135dp"
				android:src="@drawable/ic_user_img"
				app:layout_constraintBottom_toBottomOf="@+id/header_cover_video"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_bias="0.1"/>
			<ProgressBar
				android:id="@+id/progress_bar_profile_img"
				android:layout_width="30dp"
				android:layout_height="30dp"
				app:layout_constraintBottom_toBottomOf="@+id/row_icon"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintVertical_bias="0.9"/>


			<com.beachpartnerllc.beachpartner.etc.common.FloatingActionMenu
				android:id="@+id/fabFAM"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_marginLeft="25dp"
				android:layout_marginRight="16dp"
				android:elevation="10dp"
				app:layout_constraintBottom_toBottomOf="@+id/row_icon"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/row_icon"
				app:menu_colorNormal="@color/white"
				app:menu_colorPressed="#2272CD"
				app:menu_colorRipple="#62B2FF"
				app:menu_fab_size="normal"
				app:menu_labels_ellipsize="middle"
				app:menu_labels_position="right"
				app:menu_labels_singleLine="true"
				app:menu_labels_style="@dimen/text_size"
				app:menu_showShadow="false">

				<com.beachpartnerllc.beachpartner.etc.common.FloatingActionButton
					android:id="@+id/fab_image"
					style="@style/MenuButtonsSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_share_img"
					app:fab_label="Image"
					app:fab_size="normal"/>

				<com.beachpartnerllc.beachpartner.etc.common.FloatingActionButton
					android:id="@+id/fab_video"
					style="@style/MenuButtonsSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_share_video"
					app:fab_label="Video"
					app:fab_size="normal"/>


			</com.beachpartnerllc.beachpartner.etc.common.FloatingActionMenu>

			<TextView
				android:id="@+id/img_share_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="28dp"
				android:layout_marginLeft="28dp"
				android:layout_marginTop="8dp"
				android:text="@string/share"
				android:textAlignment="center"
				android:textSize="12sp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/fabFAM"/>

			<ImageView
				android:id="@+id/edit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="22dp"
				android:layout_marginRight="25dp"
				android:clickable="true"
				android:src="@drawable/ic_edit"
				app:layout_constraintBottom_toBottomOf="@+id/fabFAM"
				app:layout_constraintEnd_toEndOf="parent"/>
			<TextView
				android:id="@+id/edit_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginRight="10dp"
				android:text="@string/editProfile"
				android:textSize="12sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/edit"/>
			<TextView
				android:id="@+id/username_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_8dp"
				android:text="Martin Luther King"
				app:layout_constraintEnd_toEndOf="@+id/row_icon"
				app:layout_constraintStart_toStartOf="@+id/row_icon"
				app:layout_constraintTop_toBottomOf="@+id/row_icon"/>

			<TextView
				android:id="@+id/profile_designation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_8dp"
				android:drawableLeft="@drawable/ic_athlete_indicator"
				android:gravity="center"
				android:text="Athlete"
				android:textColor="#696969"
				app:layout_constraintEnd_toEndOf="@+id/row_icon"
				app:layout_constraintStart_toStartOf="@+id/row_icon"
				app:layout_constraintTop_toBottomOf="@+id/username_tv"/>

			<com.google.android.material.tabs.TabLayout
				android:id="@+id/tabs"
				android:layout_width="match_parent"
				android:layout_height="34.5dp"
				android:layout_marginTop="@dimen/dimen_8dp"
				android:background="@color/grey_eeeeee"
				android:elevation="@dimen/dimen_10dp"
				app:layout_constraintTop_toBottomOf="@+id/edit_tv"
				app:tabMode="fixed"/>
			<com.beachpartnerllc.beachpartner.user.userprofile.CustomViewPager
				android:id="@+id/pager"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:adapter="@{adapter}"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tabs">
			</com.beachpartnerllc.beachpartner.user.userprofile.CustomViewPager>

		</androidx.constraintlayout.widget.ConstraintLayout>


	</ScrollView>
</layout>
