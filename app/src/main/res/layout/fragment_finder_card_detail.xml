<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/imgv_person"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/dislike"
				android:contentDescription="@null"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>

			<View
				android:id="@+id/view_One"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@drawable/overlay_card"
				app:layout_constraintBottom_toBottomOf="@+id/imgv_person"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>

			<TextView
				android:id="@+id/txtv_name"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:text="Alex Xavier , 19"
				android:textColor="@color/white"
				android:textStyle="bold"
				android:padding="5dp"
				android:contentDescription="@null"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toTopOf="@+id/view_One"/>
			<TextView
				android:id="@+id/txtv_usertype"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:text="Athlete"
				android:contentDescription="@null"
				android:textColor="@color/white"
				app:layout_constraintBottom_toBottomOf="@+id/view_One"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/txtv_name"/>

			<ImageView
				android:id="@+id/imgv_uparrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/icon_uparrow"
				android:padding="@dimen/padding_10dp_search_info"
				android:contentDescription="@null"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="@+id/view_One"/>


			<!--Folding Cell Layout start here-->


			<androidx.cardview.widget.CardView
				android:id="@+id/foldingCard"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="10dp"
				app:cardCornerRadius="@dimen/card_corner_radious_5dp_search"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintStart_toStartOf="@id/view_One"
				app:layout_constraintTop_toBottomOf="@+id/view_One">

				<com.ramotion.foldingcell.FoldingCell
					android:id="@+id/folding_cell"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

						<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:visibility="gone">

							<TextView
								android:id="@+id/txtv_topOne"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:contentDescription="@null"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintStart_toStartOf="parent"/>
							<TextView
								android:id="@+id/txtv_topTwo"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:contentDescription="@null"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintTop_toBottomOf="@+id/txtv_topOne"/>
							<TextView
								android:id="@+id/txtv_topThree"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:contentDescription="@null"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintTop_toBottomOf="@+id/txtv_topTwo"/>

						</androidx.constraintlayout.widget.ConstraintLayout>

					<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="@dimen/card_corner_radious_5dp_search">

						<ImageView
							android:id="@+id/imgv_badge"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_badge"
							android:contentDescription="@null"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintRight_toRightOf="parent"
							app:layout_constraintTop_toTopOf="parent"/>

						<TextView
							android:id="@+id/txtv_badge_info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:contentDescription="@null"
							android:text="@string/string_top_finishes"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintRight_toRightOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/imgv_badge"/>

					</androidx.constraintlayout.widget.ConstraintLayout>
				</com.ramotion.foldingcell.FoldingCell>


			</androidx.cardview.widget.CardView>

			<!--Folding Cell Layout end here-->


			<View
				android:id="@+id/view_Two"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/blue_0b1d56"
				android:layout_marginTop="10dp"
				app:layout_constraintTop_toBottomOf="@+id/foldingCard"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>


			<View
				android:id="@+id/view_Three_calendar_topButtons"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				app:layout_constraintTop_toBottomOf="@+id/view_Two"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>


			<ImageView
				android:id="@+id/imgv_left_arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/left_arrow"
				android:contentDescription="@null"
				android:layout_marginLeft="50dp"
				app:layout_constraintStart_toStartOf="@id/view_Three_calendar_topButtons"
				app:layout_constraintTop_toTopOf="@+id/view_Three_calendar_topButtons"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>


			<ImageView
				android:id="@+id/imgv_right_arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/right_arrow"
				android:contentDescription="@null"
				android:layout_marginRight="50dp"
				app:layout_constraintTop_toTopOf="@+id/view_Three_calendar_topButtons"
				app:layout_constraintRight_toRightOf="parent"/>

			<TextView
				android:id="@+id/txtv_monthview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="JANUARY"
				android:textStyle="bold"
				android:contentDescription="@null"
				android:textColor="@color/blue_0b1d56"
				app:layout_constraintTop_toBottomOf="@+id/view_Three_calendar_topButtons"
				app:layout_constraintLeft_toRightOf="@+id/imgv_left_arrow"
				app:layout_constraintRight_toLeftOf="@+id/imgv_right_arrow"/>


			<com.github.sundeepk.compactcalendarview.CompactCalendarView
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:id="@+id/compactcalendar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:compactCalendarTargetHeight="250dp"
				android:layout_marginTop="@dimen/margin_left_20dp"
				app:compactCalendarTextSize="@dimen/calendar_fontsize_10sp"
				app:compactCalendarBackgroundColor="#fff"
				app:compactCalendarTextColor="#534c4c"
				app:compactCalendarCurrentSelectedDayBackgroundColor="@color/transparent_blue"
				app:compactCalendarCurrentSelectedDayTextColor="#fff"
				app:compactCalendarCurrentDayTextColor="#fff"
				app:compactCalendarCurrentDayBackgroundColor="@color/transparent"
				app:compactCalendarCurrentDayIndicatorStyle="fill_large_indicator"
				app:compactCalendarEventIndicatorStyle="small_indicator"
				app:compactCalendarOtherMonthDaysTextColor="#534c4c"
				app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="true"
				app:layout_constraintStart_toStartOf="@id/view_Three_calendar_topButtons"
				app:layout_constraintTop_toBottomOf="@+id/txtv_monthview"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>