<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/colorBackground</item>
		<item name="buttonStyle">@style/ButtonStyle</item>
		<item name="android:textViewStyle">@style/TextViewStyle</item>
		<item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.FullScreen">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
		<item name="android:fontFamily">@font/sf_regular</item>
		<item name="android:background">@drawable/draw_rect_gradient_001443_2b3990</item>
		<item name="android:includeFontPadding">false</item>
	</style>

	<style name="TextViewStyle" parent="android:Widget.TextView">
		<item name="android:fontFamily">@font/sf_regular</item>
		<item name="fontStyle">normal</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:color">@color/grey_26999999</item>
	</style>

	<style name="DatePickerStyle">
		<item name="android:datePickerMode">spinner</item>
		<item name="android:calendarViewShown">true</item>
	</style>

	<style name="AlertDialogTheme">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="LoadingIndicatorSmall" parent="AVLoadingIndicatorView.Small">
		<item name="indicatorName">BallPulseSyncIndicator</item>
		<item name="indicatorColor">@color/colorPrimary</item>
	</style>

	<style name="LoadingIndicatorSmall.White">
		<item name="indicatorColor">@color/white</item>
	</style>

	<style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">@dimen/text_14sp</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="MenuButtonsSmall">
		<item name="fab_size">mini</item>
		<item name="fab_colorNormal">#1565C0</item>
		<item name="fab_colorPressed">#2272CD</item>
		<item name="fab_colorRipple">#62B2FF</item>
	</style>
</resources>
